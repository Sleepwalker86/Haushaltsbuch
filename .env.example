# ============================================
# KONFIGURATION FÜR INTERNE DATENBANK
# (Verwendung mit docker-compose.yml)
# ============================================
MYSQL_ROOT_PASSWORD=root_password_hier_eintragen
MYSQL_DATABASE=Haushaltsbuch
MYSQL_USER=finanzapp_user
MYSQL_PASSWORD=finanzapp_password_hier_eintragen
MYSQL_PORT=3306

# ============================================
# KONFIGURATION FÜR EXTERNE DATENBANK
# (Verwendung mit docker-compose.external-db.yml)
# ============================================
# DB_HOST=192.168.10.xx                 # IP-Adresse oder Hostname der externen DB
# DB_USER=db_user                       # Datenbankbenutzer
# DB_PASSWORD=password                  # Passwort
# DB_NAME=Haushaltsbuch                 # Datenbankname

# ============================================
# FLASK ANWENDUNG
# ============================================
APP_PORT=5001
FLASK_DEBUG=0

# Secret Key für Flask (wichtig für Produktion!)
SECRET_KEY=change-me-please-generate-secure-key

# ============================================
# PAPERLESS KONFIGURATION (optional)
# ============================================
PAPERLESS_ENABLED=false
PAPERLESS_IP=http://192.168.10.xx:8010/
PAPERLESS_TOKEN=DEIN-TOKEN
PAPERLESS_DOCUMENT_TYPE_ID=47
